<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox prefHeight="640.0" prefWidth="980.0" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="comp3111.examsystem.controller.CourseManagementController">
    <SplitPane dividerPositions="0.15" orientation="VERTICAL" VBox.vgrow="ALWAYS" styleClass="main-split-pane">
        <VBox spacing="15" styleClass="filter-section">
            <padding>
                <Insets bottom="15" left="20" right="20" top="15" />
            </padding>
            <HBox alignment="CENTER_LEFT" spacing="25">
                <VBox spacing="8">
                    <Text styleClass="label-text" text="Course ID:" />
                    <TextField fx:id="courseIdFilter" styleClass="filter-field" promptText="Enter Course ID" />
                </VBox>
                <VBox spacing="8">
                    <Text styleClass="label-text" text="Course Name:" />
                    <TextField fx:id="courseNameFilter" styleClass="filter-field" promptText="Enter Course Name" />
                </VBox>
                <VBox spacing="8">
                    <Text styleClass="label-text" text="Department:" />
                    <TextField fx:id="departmentFilter" styleClass="filter-field" promptText="Enter Department" />
                </VBox>
                <HBox alignment="BOTTOM_LEFT" spacing="15">
                    <Button mnemonicParsing="false" onAction="#handleReset" styleClass="button-reset" text="Reset" />
                    <Button mnemonicParsing="false" onAction="#handleFilter" styleClass="button-primary" text="Filter" />
                </HBox>
            </HBox>
        </VBox>

        <SplitPane dividerPositions="0.7">
            <TableView fx:id="courseTable" styleClass="course-table" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="courseIdColumn" prefWidth="120.0" text="Course ID" />
                    <TableColumn fx:id="courseNameColumn" prefWidth="160.0" text="Course Name" />
                    <TableColumn fx:id="departmentColumn" prefWidth="140.0" text="Department" />
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>

            <VBox spacing="15">
                <padding>
                    <Insets bottom="15" left="20" right="20" top="15" />
                </padding>
                <VBox spacing="20" styleClass="form-section" VBox.vgrow="ALWAYS">
                    <VBox spacing="8">
                        <Text styleClass="label-text" text="Course ID:" />
                        <TextField fx:id="courseId" styleClass="input-field" promptText="Enter Course ID" />
                    </VBox>
                    <VBox spacing="8">
                        <Text styleClass="label-text" text="Course Name:" />
                        <TextField fx:id="courseName" styleClass="input-field" promptText="Enter Course Name" />
                    </VBox>
                    <VBox spacing="8">
                        <Text styleClass="label-text" text="Department:" />
                        <TextField fx:id="department" styleClass="input-field" promptText="Enter Department" />
                    </VBox>
                </VBox>

                <VBox spacing="15" alignment="CENTER">
                    <HBox alignment="CENTER" spacing="15">
                        <Button onAction="#handleAdd" styleClass="button-primary" text="Add" />
                        <Button onAction="#handleUpdate" styleClass="button-secondary" text="Update" />
                    </HBox>
                    <HBox alignment="CENTER" spacing="15">
                        <Button onAction="#handleDelete" styleClass="button-danger" text="Delete" />
                        <Button onAction="#handleRefresh" styleClass="button-secondary" text="Refresh" />
                    </HBox>
                </VBox>
            </VBox>
        </SplitPane>
    </SplitPane>
</VBox>